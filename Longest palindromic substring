#include<stdio.h>
#include<string.h>
#include<stdbool.h>
bool isPalindrome(char *s,int low,int high){
    int i;
    for(i=low;i<((low+high)/2);i++){
        if(s[i]!=s[high-i])
        return false;
        
    }
    return true;
}
int main()
{
    char str[1000];
    scanf("%s",str);
    int low=0,high = strlen(str),i;
    if(isPalindrome(str,low,high)){
        for(i=low;i<=high;i++)
        printf("%c",str[i]);
        return 0;
    }
    else if(isPalindrome(str,low+1,high)){
        for(i=low+1;i<=high;i++)
        printf("%c",str[i]);
        return 0;
    }
    else if(isPalindrome(str,low,high-1)){
        for(i=low;i<=high-1;i++)
        printf("%c",str[i]);
        return 0;
    }
    else
    {
        low = low+1;
        high = high -1;
        isPalindrome(str,low,high);
    }
    return 0;
}
